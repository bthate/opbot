#!/usr/bin/env python3
# OPBOT - Object Programming (bin/op)
#
# this file is placed in the public domain

from op.run import Basic, cfg, execute, parse_cli, os

def main():
    cfg.wd = os.path.expanduser("~/.opbot")
    cfg.verbose = True
    parse_cli()
    if not cfg.txt:
        return
    h = Basic()
    h.walk("opmod")
    h.walk("opbot")
    h.cmd(cfg.otxt)

execute(main)
