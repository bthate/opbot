#!/usr/bin/python3
# OPBOT - operbot (bin/opcmd)
#
# This file is placed in the Public Domain.

from op.run import Basic, cfg, execute, os, sys
from op.utl import privileges

def main():
    if len(sys.argv) <= 1:
        return 
    cfg.wd = "/var/lib/opbot/"
    privileges("opbot")
    h = Basic()
    h.walk("opbot,opmod")
    h.cmd(" ".join(sys.argv[1:]))

execute(main)
os._exit(0)
