#!/usr/bin/env python3
# This file is placed in the Public Domain.

import os, readline, shutil, sys

from op.bsc import Basic
from op.csl import console
from op.dbs import last
from op.obj import Object, format, load, register, save, update
from op.prs import parse
from op.run import cfg, parse_cli
from op.thr import launch
from op.utl import root

def main():
    if not root():
        print("you need operator status")
        return
    cfg.wd = "/var/lib/opbot/"
    cfg.md = os.path.join(cfg.wd, "mod")
    parse_cli()
    if cfg.op("s"):
        save(cfg)
    elif cfg.op("l"):
        last(cfg)
    h = Basic()
    h.fromdir(cfg.md)
    h.walk("op")
    h.walk("opmod")
    if cfg.txt:
        return h.cmd(cfg.otxt)
    h.start()
    h.init(cfg.mods)
    if cfg.op("c"):
        h.init("csl")
    if cfg.op("cw"):
        h.wait()

console(main)
