#!/usr/bin/env python3
# OPBOT- Object Programming Bot (bin/test)
#
# This file is placed in the Public Domain.

import os, unittest

from op.run import cfg, parse_cli
from op.trm import termsave, termreset

import test.run

def exec(main):
    termsave()
    try:
        main()
    except KeyboardInterrupt:
        print("")
    except PermissionError as ex:
        print(str(ex))
    finally:
        termreset()

def open(txt):
    try:
        for line in os.popen(txt).readlines():
            print(line.rstrip())
    except:
        pass

def main():
    test_path = os.getcwd() + os.sep + "test"
    open("rm -fR ~/.test")
    cfg.wd = os.path.expanduser("~/.test")
    parse_cli()
    if cfg.op("v"):
        cfg.verbose = True
    if cfg.txt:
        pat = "test_%s*" % cfg.txt
    else:
        pat = "test*"
    suite = unittest.loader.TestLoader().discover(test_path, pattern=pat)
    unittest.TextTestRunner(verbosity=3).run(suite)

exec(main)
